{
  "version": "1.0.0",
  "name": "@topo/editor",
  "sideEffects": [
    "dist/*",
    "src/theme/*"
  ],
  "main": "dist/topo-editor.umd.js",
  "module": "dist/topo-editor.mjs",
  "style": "dist/style.css",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/topo-editor.mjs",
      "require": "./dist/topo-editor.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./*": "./*"
  },
  "scripts": {
    "build": "npm run build:type && vite build",
    "build:type": "npm run clear:type && vue-tsc --declaration --emitDeclarationOnly --project tsconfig.build.json",
    "clear:type": "rimraf ./types"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@babel/core": "^7.18.0",
    "@topo/core": "workspace:^",
    "@topo/icon": "workspace:^",
    "@topo/panel": "workspace:^",
    "@topo/schema": "workspace:^",
    "@topo/stage": "workspace:^",
    "@topo/ui": "workspace:^",
    "@topo/utils": "workspace:^",
    "@he-tree/vue": "^2.8.7",
    "@pictode/vue-aide": "^1.0.4",
    "buffer": "^6.0.3",
    "color": "^3.1.3",
    "esprima": "^4.0.1",
    "events": "^3.3.0",
    "gesto": "^1.7.0",
    "keycon": "^1.1.2",
    "lodash-es": "^4.17.21",
    "sass-loader": "^16.0.3",
    "serialize-javascript": "^6.0.0",
    "vue": "^3.5.12",
    "vue-i18n": "^9.2.2"
  },
  "peerDependencies": {
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@types/esprima": "^4.0.5",
    "@types/events": "^3.0.0",
    "@types/lodash-es": "^4.17.4",
    "@types/node": "^18.0.0",
    "@types/serialize-javascript": "^5.0.1",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/test-utils": "^2.0.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "rimraf": "^3.0.2",
    "sass": "^1.80.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.6.2",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.8"
  }
}
